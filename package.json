{
  "name": "gemini-desktop",
  "version": "1.0.0",
  "description": "Desktop application for Google Gemini with floating HUD and system tray integration",
  "type": "module",
  "main": "dist/main/index.js",
  "author": "Gemini Desktop User",
  "license": "MIT",
  "engines": {
    "node": ">=22.12.0"
  },
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "package:win": "npm run build && electron-builder --win",
